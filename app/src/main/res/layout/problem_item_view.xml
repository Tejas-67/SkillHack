<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/cardview_problem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problem Statement"
            android:textSize="28dp"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            />
        <TextView
            android:id="@+id/cardview_problem_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:text="This view here would be containing the description of the problem statement."/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nouse_tv"
                    android:text="Prize Money:"
                    android:paddingLeft="24dp"
                    android:paddingTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cash_prize_tv"
                    android:text="10000"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nousedeadline_tv"
                    android:text="Deadline:"
                    android:paddingTop="10dp"
                    android:paddingLeft="24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deadline_tv"
                    android:text="23-02-2023"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"/>

                <Button
                    android:id="@+id/view_more_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_marginLeft="130dp"
                    android:text="View More" />
            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>