<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="15dp"
        app:strokeColor="@color/purple_700"
        app:strokeWidth="3dp"
        app:cardElevation="3dp"
        android:background="@color/black"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"


            android:background="@color/black"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <TextView
            android:id="@+id/cardview_problem_name"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROBLEM STATEMENT"
            android:fontFamily="sans-serif-smallcaps"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="28sp"
            android:padding="20dp"
            />
        <TextView
            android:id="@+id/cardview_problem_desc"
            android:textAlignment="textStart"
            android:padding="10dp"

            android:textColor="@color/halfwhite"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:text="This view here would be containing the description of the problem statement."/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:textFontWeight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/nouse_tv"
                    android:textColor="@color/white"
                    android:text="Prize Money:"
                   />

                <TextView
                    android:id="@+id/cash_prize_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="10000"
                    android:textColor="#3e9c35" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/nousedeadline_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="Deadline:"

                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/deadline_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="23-02-2023"
                    android:textColor="@color/red" />
                <TextView
                    android:id="@+id/view_more_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="View more"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:textColor="@color/blue">

                </TextView>



            </LinearLayout>





        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>