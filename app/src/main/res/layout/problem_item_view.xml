<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_margin="15dp"
        app:cardElevation="3dp"
        android:foreground="@drawable/card_border"
        android:background="@color/black"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:padding="3dp"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/cardview_problem_name"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROBLEM STATEMENT"
            android:fontFamily="sans-serif-smallcaps"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:textSize="28dp"
            android:padding="20dp"
            />
        <TextView
            android:id="@+id/cardview_problem_desc"
            android:textColor="@color/halfwhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textSize="18sp"
            android:text="This view here would be containing the description of the problem statement."/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:textFontWeight="10"
                    android:layout_height="wrap_content"
                    android:id="@+id/nouse_tv"
                    android:textColor="@color/white"
                    android:text="Prize Money:"
                   />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cash_prize_tv"
                    android:text="10000"
                    android:textColor="#3e9c35"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="71dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nousedeadline_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="Deadline:"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/deadline_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="23-02-2023"
                    android:textColor="@color/white" />


                <TextView
                    android:id="@+id/view_more_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="100dp"
                    android:clickable="true"
                    android:text="View More"
                    android:textColor="@color/halfwhite">

                </TextView>
            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>