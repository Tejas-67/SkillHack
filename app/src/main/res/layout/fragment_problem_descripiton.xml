<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ProblemDescripitonFragment"
        android:orientation="vertical">
        <TextView
            android:id="@+id/problem_statement_tv"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problem Statement"
            android:textSize="30dp"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"

            />

        <TextView
            android:id="@+id/problem_description_tv"
            android:textColor="@color/white"
            android:background="@drawable/card_border"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="This textview would be displaying the problem description for the problem statement. I am not good at layout stuff so would be leaving it here.
Signing Off."

            android:textSize="20dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:id="@+id/nouse_tv"
            android:text="Prize Money:"
            android:paddingLeft="24dp"
            android:paddingTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/green"
            android:layout_height="wrap_content"
            android:id="@+id/cash_prize_tv"
            android:text="â‚¹10000"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/nousedeadline_tv"
            android:text="Deadline:"

            android:paddingTop="10dp"
            android:paddingLeft="24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:id="@+id/deadline_tv"
            android:text="23-02-2023"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"/>
    </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/drive_link_input_textinputlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="10dp"
                android:hint="Enter valid Google drive or github link for solution"
                android:id="@+id/drive_link_input_texteditlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textUri"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.spark.submitbutton.SubmitButton
            android:id="@+id/drive_link_submit_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="SUBMIT"
            android:textColor="@color/red"
            app:sub_btn_background="@color/white"
            app:sub_btn_duration="3000"
            app:sub_btn_line_color="#0F9D58"
            app:sub_btn_ripple_color="#0F9D58"
            app:sub_btn_tick_color="@color/white" />

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Start Solving"
            android:background="@drawable/button_border"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/start_solving_btn"/>
